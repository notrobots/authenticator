<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/error</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/error</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/error</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/error</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="android:textColorSecondary">@color/google_grey400</item>

        <!-- Surface & background -->
        <item name="colorSurface">@color/google_grey900</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:windowBackground">@color/google_grey900</item>
        <item name="backgroundColor">@color/google_grey900</item>

        <!-- Action bar & Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Action Mode -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionMode</item>
    </style>
</resources>