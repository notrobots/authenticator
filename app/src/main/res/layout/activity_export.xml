<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_export_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Export"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_export_output" />

    <dev.notrobots.authenticator.views.BetterSpinner
        android:id="@+id/spinner_export_format"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:spinnerLabel="Export format">

    </dev.notrobots.authenticator.views.BetterSpinner>

    <dev.notrobots.authenticator.views.BetterSpinner
        android:id="@+id/spinner_export_output"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_export_format"
        app:layout_constraintStart_toStartOf="@+id/spinner_export_format"
        app:layout_constraintTop_toBottomOf="@+id/spinner_export_format"
        app:spinnerLabel="Export output" />

</androidx.constraintlayout.widget.ConstraintLayout>