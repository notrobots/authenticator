<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/totp_background_indicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.4"
        android:layout_marginEnd="@dimen/alert_dialog_totp_row_indicator_margin_end"
        android:layout_marginStart="@dimen/alert_dialog_totp_row_indicator_margin_start"
        android:background="@drawable/bg_totp_background_indicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatCheckedTextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_totp_indicator_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/AlertDialogListItem" />

</androidx.constraintlayout.widget.ConstraintLayout>