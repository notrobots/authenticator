<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_account"
    android:paddingTop="6dp">

    <ImageView
        android:id="@+id/drag_handle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="-12dp"
        android:contentDescription="@string/label_drag_handle"
        android:src="@drawable/ic_reorder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorSecondary" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/dataLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="6dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toStartOf="@+id/edit"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/label"
            style="@style/AccountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/edit"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Google" />

        <TextView
            android:id="@+id/name"
            style="@style/AccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="google@gmail.com" />

        <TextView
            android:id="@+id/pin"
            style="@style/AccountPin.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="123 456" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:id="@+id/edit"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/label_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/next_pin"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_edit"
        app:tint="?attr/colorSecondary" />

    <ImageView
        android:id="@+id/next_pin"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/label_generate_next_pin"
        app:layout_constraintEnd_toStartOf="@+id/indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_refresh"
        app:tint="?attr/colorSecondary" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:max="10"
        android:progress="5"
        app:indicatorSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/label_account_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/drag_handle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_palette"
        app:tint="?attr/colorSecondary"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/bg_list_separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Edit mode -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="edit, drag_handle"
        tools:visibility="gone" />

    <!-- TOTP -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_totp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="indicator"
        tools:visibility="visible" />

    <!-- HOTP -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_hotp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="next_pin"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>