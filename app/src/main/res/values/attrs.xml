<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BetterSpinner">
        <!-- Spinner entries, will be used as values if no values are provided -->
        <attr name="spinnerEntries" format="reference"/>
        <!-- Spinner values -->
        <attr name="spinnerValues" format="reference"/>
        <!-- Spinner label -->
        <attr name="spinnerLabel" format="string"/>
    </declare-styleable>
    <declare-styleable name="OptionList">
        <!-- Text appearance of each of the option's title -->
        <attr name="option_titleTextAppearance" format="reference"/>
        <!-- Text appearance of each of the option's description -->
        <attr name="option_descriptionTextAppearance" format="reference"/>
        <!-- Tint of each of the option's icon -->
        <attr name="option_iconTint" format="reference|color" />
    </declare-styleable>
</resources>